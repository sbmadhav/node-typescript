{
  "name": "typescript-express-demo",
  "description": "A demo to showcase how typescrit works with Express based server application",
  "version": "1.0.0",
  "private": true,
  "author": "Brameshmadhav Srinivasan",
  "scripts": {
    "dev": "NODE_ENV=development nodemon ./bin/www",
    "compile": "tsc --outDir ./dist ./src/*.ts",
    "start": "npm run compile && node ./bin/www",
    "sample": "tsc -w --outDir ./dist ./src/sample.ts"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "method-override": "^2.3.6",
    "morgan": "^1.7.0",
    "pug": "^2.0.0-beta6"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.5",
    "@types/cookie-parser": "^1.3.30",
    "@types/errorhandler": "0.0.31",
    "@types/method-override": "0.0.30",
    "@types/morgan": "^1.7.32",
    "nodemon": "^1.11.0",
    "typescript": "^2.0.8"
  }
}
